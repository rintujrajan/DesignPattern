    {
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build Facade Pattern Example",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "${cwd}\\*.cpp",
                "${cwd}\\Appliances\\*.cpp",
                "/Fe:",
                "${fileDirname}\\.vscode\\Build\\FacadePatternMain.exe",
                "/Fo:",
                "${fileDirname}\\.vscode\\Build\\",
                "/Fd:",
                "${fileDirname}\\.vscode\\Build\\"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}